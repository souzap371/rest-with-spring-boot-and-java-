package br.ufrn.imd.solicitacaurn.solus.repository;

import java.util.List;
import java.util.Optional;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;

import br.com.mkapi.solus.domain.ProcedimentoSolus;

@Repository
public interface ProcedimentoSolusRepository extends JpaRepository<ProcedimentoSolus, Long>{

	@Query(value = "select * from procedimento_solus where ativo=1 and id=?1 ",nativeQuery = true)
	Optional<ProcedimentoSolus> findById(Long idProcedimento);
	
	@Query(value = "SELECT DISTINCT nome_usual FROM procedimento_solus where necessita_autorizacao=false and ativo=1 ",nativeQuery = true)
	List<ProcedimentoSolus> findAllNomeUsualSemAutorizacao();
	
	@Query(value = "select * from procedimento_solus where ativo=1 and "
			+ " sem_acento(UPPER(denominacao))  LIKE sem_acento(UPPER('%' || :denominacao || '%')) "
			+ " order by denominacao asc",nativeQuery = true)
	List<ProcedimentoSolus> findAllByDenominacao(@Param("denominacao") String denominacao);
	
}
