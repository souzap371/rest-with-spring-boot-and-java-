package br.ufrn.imd.solicitacaurn.solus.controller;

import java.util.List;
import java.util.UUID;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;

import br.com.mkapi.solus.domain.AbstractEntity;
import br.com.mkapi.solus.domain.PrestadorSolicitante;
import br.com.mkapi.solus.repository.PrestadorSolicitanteRepository;

@Controller
@RequestMapping("/api/solus/prestadorSolicitante")
@CrossOrigin(origins = "*", allowedHeaders = "*")
public class PrestadorSolicitanteController extends AbstractController<AbstractEntity> {

	@Autowired
	PrestadorSolicitanteRepository prestadorSolicitanteRepository;

	@GetMapping("/getByNameOrCrm/{term}")
	public ResponseEntity<List<PrestadorSolicitante>> getPrestadorSolicitanteByNameOrCrm(@PathVariable("term") String term){
		term = term.replace(" ", "%");

		List<PrestadorSolicitante> psList = prestadorSolicitanteRepository.getPrestadorSolicitanteByNameOrCrm(term);
		return new ResponseEntity<>(psList, HttpStatus.OK);
	}
	
	@Override
	protected JpaRepository<AbstractEntity, UUID> getRepository() {
		return null;
	}
	
}
