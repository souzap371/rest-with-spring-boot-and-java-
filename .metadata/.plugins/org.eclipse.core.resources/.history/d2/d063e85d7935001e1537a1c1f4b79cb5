package br.ufrn.imd.solicitacaurn.solus.controller;

import java.util.List;
import java.util.UUID;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;

import br.com.mkapi.solus.domain.AbstractEntity;
import br.com.mkapi.solus.domain.ProcedimentoPedido;
import br.com.mkapi.solus.repository.ProcedimentoPedidoRepository;

@Controller
@RequestMapping("/api/solus/procedimentoPedido")
@CrossOrigin(origins = "*", allowedHeaders = "*")
public class ProcedimentoPedidoController extends AbstractController<AbstractEntity> {

	@Autowired
	ProcedimentoPedidoRepository procedimentoPedidoRepository;
	
	@GetMapping("/getProcedimentoPedidoByDescricao/{term}")
	public ResponseEntity<List<ProcedimentoPedido>> getProcedimentoPedidoByDescricao(@PathVariable("term") String term){
		List<ProcedimentoPedido> list = procedimentoPedidoRepository.getProcedimentoPedidoByDescricao(term);
		return new ResponseEntity<>(list, HttpStatus.OK);
	}
	
	@Override
	protected JpaRepository<AbstractEntity, UUID> getRepository() {
		return null;
	}
}
