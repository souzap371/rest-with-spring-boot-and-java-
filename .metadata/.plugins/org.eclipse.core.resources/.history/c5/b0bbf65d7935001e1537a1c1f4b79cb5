package br.ufrn.imd.solicitacaurn.solus.controller;

import java.util.List;
import java.util.UUID;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;

import br.com.mkapi.solus.domain.AbstractEntity;
import br.com.mkapi.solus.domain.FaturaDetalhada;
import br.com.mkapi.solus.repository.FaturaDetalhadaSolusRepository;

@Controller
@RequestMapping("/api/solus/faturaDetalhada")
@CrossOrigin(origins = "*", allowedHeaders = "*")
public class FaturaDetalhadaSolusController extends AbstractController<AbstractEntity> {

	@Autowired
	private FaturaDetalhadaSolusRepository repository;

	@GetMapping("/{idSolus}/getByBoleto")
	public ResponseEntity<List<FaturaDetalhada>> getAllByBeneficiario(@PathVariable("idSolus") Long idSolus) {
		List<FaturaDetalhada> carencias = repository.getByBoleto(idSolus);
		if (carencias.isEmpty())
			return new ResponseEntity<>(HttpStatus.NOT_FOUND);
		else {
			return new ResponseEntity<>(carencias, HttpStatus.OK);
		}
	}

	@Override
	protected JpaRepository<AbstractEntity, UUID> getRepository() {
		return null;
	}
}
