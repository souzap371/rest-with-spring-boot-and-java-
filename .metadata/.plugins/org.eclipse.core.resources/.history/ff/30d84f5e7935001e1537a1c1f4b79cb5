package br.ufrn.imd.solicitacaurn.solusbd.repository;

import javax.transaction.Transactional;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Modifying;
import org.springframework.data.jpa.repository.Query;

import br.com.mkapi.solusbd.domain.UsuarioSolus;

public interface UsuarioSolusRepository extends JpaRepository<UsuarioSolus, Long>{
	@Transactional
	@Modifying
	@Query(value="UPDATE HSSUSUA\n"
			+ "	SET CSENHUSUA = ?1\n"
			+ "	WHERE CCODIUSUA = ?2 "
			+ " ", nativeQuery = true)
	public void trocarSenha(String senha, String numCarteira);
}
