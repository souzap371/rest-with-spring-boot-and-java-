package br.ufrn.imd.solicitacaurn.mkdata.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;

import br.com.mkapi.mkdata.domain.Consultorio;
import br.com.mkapi.mkdata.repository.ConsultorioRepositoryMkdata;

@Controller
@RequestMapping("/api/mkdata/consultorio")
@CrossOrigin(origins = "*", allowedHeaders = "*")
public class ConsultorioControllerMkdata {

	@Autowired
	ConsultorioRepositoryMkdata consultorioRepositoty;

	@GetMapping("/getConsultorioByMedico/{idMedico}")
	public ResponseEntity<List<Consultorio>> getConsultorioByMedico(@PathVariable("idMedico") Long id) {
		List<Consultorio> consultorios = consultorioRepositoty.getConsultoriosByMedico(id);
		return new ResponseEntity<>(consultorios, HttpStatus.OK);
	}
}
