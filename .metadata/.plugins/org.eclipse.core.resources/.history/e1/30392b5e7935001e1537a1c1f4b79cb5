package br.ufrn.imd.solicitacaurn.solus.domain;

import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;
import javax.persistence.Table;
import java.util.Date;
import javax.persistence.Temporal;
import javax.persistence.TemporalType;
import javax.persistence.Transient;

import org.springframework.format.annotation.DateTimeFormat;
import org.springframework.web.multipart.MultipartFile;

import javax.persistence.Lob;

import com.fasterxml.jackson.annotation.JsonFormat;

import br.com.mkapi.solus.domain.enums.StatusNoticia;

@Entity
@Table(name="noticias")
public class Noticia {
    @Id
	@GeneratedValue(strategy=GenerationType.AUTO)
	private Long id;

    @Column(name = "titulo")
	private String titulo;	

    @Column(name = "sub_titulo")
	private String subTitulo;	    

    @Column(name = "status_noticia")
	private StatusNoticia statusNoticia;	

    @Temporal(TemporalType.TIMESTAMP)
	@JsonFormat(pattern="yyyy-MM-dd'T'HH:mm:ss")
    @DateTimeFormat(pattern = "dd/MM/yyyy")		
	@Column(name = "data_postagem")
	Date dataPostagem;

    @Temporal(TemporalType.TIMESTAMP)
	@JsonFormat(pattern="yyyy-MM-dd")
    @DateTimeFormat(pattern = "dd/MM/yyyy")		
	@Column(name = "data_apresentacao")
	Date dataApresentacao; 
    //Tempo pelo qual a notícia em destaque ficará aperencendo destacada.

    @Column(name = "conteudo", length = 4000)
	private String conteudo;

    @Lob
	@Column(name="imagem")
	private byte[] imagem;

    @Column(name = "autor")
	private String autor;    

    @Column(name = "ativo")
	private Integer ativo;    

    @Column(name = "destaque")
    private Boolean destaque;
    //Notícias com destaque são apresentadas no menu principal do app, além do menu de notícias.

    @Transient
    private MultipartFile imagemMultipart;
    //Imagem que é recebida no cadastro de uma nova notícia.  

    @Transient
    private String dataApresentacaoTemp;       

    public Noticia() {

    }

    public Noticia(Long id) {
        this.id = id;
    }

    public Long getId() {
        return this.id;
    }

    public void setId(Long id) {
        this.id = id;
    }

    public String getTitulo() {
        return this.titulo;
    }

    public void setTitulo(String titulo) {
        this.titulo = titulo;
    }

    public String getSubTitulo() {
        return this.subTitulo;
    }

    public void setSubTitulo(String subTitulo) {
        this.subTitulo = subTitulo;
    }

    public StatusNoticia getStatusNoticia() {
        return this.statusNoticia;
    }

    public void setStatusNoticia(StatusNoticia statusNoticia) {
        this.statusNoticia = statusNoticia;
    }

    public Date getDataPostagem() {
        return this.dataPostagem;
    }

    public void setDataPostagem(Date dataPostagem) {
        this.dataPostagem = dataPostagem;
    }

    public Date getDataApresentacao() {
        return this.dataApresentacao;
    }

    public void setDataApresentacao(Date dataApresentacao) {
        this.dataApresentacao = dataApresentacao;
    }    

    public String getConteudo() {
        return this.conteudo;
    }

    public void setConteudo(String conteudo) {
        this.conteudo = conteudo;
    }

    public byte[] getImagem() {
        return this.imagem;
    }

    public void setImagem(byte[] imagem) {
        this.imagem = imagem;
    }

    public String getAutor() {
        return this.autor;
    }

    public void setAutor(String autor) {
        this.autor = autor;
    }

    public Integer getAtivo() {
        return this.ativo;
    }

    public void setAtivo(Integer ativo) {
        this.ativo = ativo;
    }

    public MultipartFile getImagemMultipart() {
        return this.imagemMultipart;
    }

    public void setImagemMultipart(MultipartFile imagemMultipart) {
        this.imagemMultipart = imagemMultipart;
    }    

    public Boolean getDestaque() {
        return this.destaque;
    }

    public void setDestaque(Boolean destaque) {
        this.destaque = destaque;
    }        

    public String getDataApresentacaoTemp() {
        return this.dataApresentacaoTemp;
    }

    public void setDataApresentacaoTemp(String dataApresentacaoTemp) {
        this.dataApresentacaoTemp = dataApresentacaoTemp;
    }          
}
