package br.ufrn.imd.solicitacaurn.solus.controller;

import java.util.List;
import java.util.UUID;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;

import br.com.mkapi.solus.domain.AbstractEntity;
import br.com.mkapi.solus.domain.PrestadorAtendimento;
import br.com.mkapi.solus.repository.PrestadorAtendimentoRepository;

@Controller
@RequestMapping("/api/solus/prestadorAtendimento")
@CrossOrigin(origins = "*", allowedHeaders = "*")
public class PrestadorAtendimentoController  extends AbstractController<AbstractEntity>{
	
	@Autowired
	private PrestadorAtendimentoRepository repository;
	
	@GetMapping("/view/getByNome/{nome}")
	public ResponseEntity<List<PrestadorAtendimento>> getPedidoViewById(@PathVariable("nome") String nome){
		nome = nome.replace(" ", "%");
		List<PrestadorAtendimento> list = repository.getByNome(nome);
		
		return new ResponseEntity<>(list, HttpStatus.OK);
	}
	@Override
	protected JpaRepository<AbstractEntity, UUID> getRepository() {
		return null;
	}

}
