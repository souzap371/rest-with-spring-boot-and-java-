package br.ufrn.imd.solicitacaurn.solus.controller;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;

import br.com.mkapi.solus.domain.DmedAnoDesativado;
import br.com.mkapi.solus.repository.DmedAnoDesativadoRepository;

@Controller
@RequestMapping("/api/solus/dmedAnoDesativado")
@CrossOrigin(origins = "*", allowedHeaders = "*")
public class DmedAnoDesativadoController {
    @Autowired
    private DmedAnoDesativadoRepository dmedAnoDesativadoRepository;

    @GetMapping
	public ResponseEntity<List<DmedAnoDesativado>> getAll() {
		List<DmedAnoDesativado> anos = dmedAnoDesativadoRepository.findAll();
		
		return new ResponseEntity<>(anos, HttpStatus.OK);
	}    

    @PostMapping
	public ResponseEntity<Object> post(@RequestBody DmedAnoDesativado dmedAnoDesativado){
		if(dmedAnoDesativado.getAno() != null){
			dmedAnoDesativado = dmedAnoDesativadoRepository.save(dmedAnoDesativado);
			return new ResponseEntity<>(dmedAnoDesativado, HttpStatus.OK);
		}
		else
			return new ResponseEntity<>("É necessário informar o ano que será desativado.", HttpStatus.FORBIDDEN);
	}    

	@DeleteMapping("/{id}")
	public ResponseEntity<Object> delete(@PathVariable(value = "id") Long id){
		Optional<DmedAnoDesativado> opt = dmedAnoDesativadoRepository.findById(id);
		if(!opt.isPresent())
            return new ResponseEntity<>("Entidade não encontrada.", HttpStatus.FORBIDDEN);
		else{
			dmedAnoDesativadoRepository.deleteById(id);
			return new ResponseEntity<>(HttpStatus.OK);	
		}
	}       
}
