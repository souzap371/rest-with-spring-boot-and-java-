package br.ufrn.imd.solicitacaurn.solus.controller;


import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;

import br.com.mkapi.solus.domain.ProcedimentoSolus;
import br.com.mkapi.solus.repository.ProcedimentoSolusCustomRepository;
import br.com.mkapi.solus.repository.ProcedimentoSolusRepository;


@Controller
@RequestMapping("/api/solus/procedimento")
@CrossOrigin(origins = "*", allowedHeaders = "*")
public class ProcedimentoSolusController{
	
	@Autowired
	private ProcedimentoSolusRepository procedimentoRepository;
	
	@Autowired
	private ProcedimentoSolusCustomRepository procedimentoCustomRepository;
	
	
	@GetMapping("/getAllProcedimentosSemAutorizacao")
	public ResponseEntity<List<ProcedimentoSolus>> getAllProcedimentosSemAutorizacao(){
		return new ResponseEntity<>(procedimentoCustomRepository.findAllNomeUsualSemAutorizacao(),HttpStatus.OK);
	}
	
	@GetMapping("/{denominacao}/getByNome")
	public ResponseEntity<List<ProcedimentoSolus>> getProcedimentosByNome(@PathVariable("denominacao") String denominacao){
		return new ResponseEntity<>(procedimentoRepository.findAllByDenominacao(denominacao),HttpStatus.OK);
	}
}
