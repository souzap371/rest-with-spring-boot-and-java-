package br.ufrn.imd.solicitacaurn.solus.controller;

import java.util.List;
import java.util.UUID;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;

import br.com.mkapi.solus.domain.AbstractEntity;
import br.com.mkapi.solus.domain.Coparticipacao;
import br.com.mkapi.solus.repository.CoparticipacaoRepository;

/*
 * Controle dos demonstrativos em extrato de coparticipação.
 */

@Controller
@RequestMapping("/api/solus/coparticipacao")
@CrossOrigin(origins = "*", allowedHeaders = "*")
public class CoparticipacaoSolusController extends AbstractController<AbstractEntity> {

	@Autowired
	private CoparticipacaoRepository coparticipacaoRepository;

	@GetMapping("/{idBeneficiario}/getCompetenciasByBeneficiario")
	public ResponseEntity<List<String>> getCompetenciasByBeneficiario(
			@PathVariable("idBeneficiario") Long idBeneficiario) {

		List<String> competencias = this.coparticipacaoRepository.findCompetenciasByBeneficiario(idBeneficiario);
		return new ResponseEntity<>(competencias, HttpStatus.OK);
	}

	@GetMapping("/{idBeneficiario}/{competencia}/getCoparticipacaoByCompetencia")
	public ResponseEntity<List<Coparticipacao>> getCoparticipacaoByCompetencia(
			@PathVariable("idBeneficiario") Long idBeneficiario, @PathVariable("competencia") String competencia) {
		String ajusteCompetencia = competencia.replace('-', '/');
		List<Coparticipacao> coparticipacoes = coparticipacaoRepository.findByCompetencia(idBeneficiario,
				ajusteCompetencia);

		return new ResponseEntity<>(coparticipacoes, HttpStatus.OK);
	}

	@Autowired
	public void setCoparticipacaoRepository(CoparticipacaoRepository coparticipacaoRepository) {
		this.coparticipacaoRepository = coparticipacaoRepository;
	}

	@Override
	protected JpaRepository<AbstractEntity, UUID> getRepository() {
		return null;
	}

}
