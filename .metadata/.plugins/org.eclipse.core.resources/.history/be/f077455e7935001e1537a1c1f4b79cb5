package br.ufrn.imd.solicitacaurn.solus.repository;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

import br.com.mkapi.solus.domain.PrestadoresFavoritosSolus;

@Repository
public interface PrestadoresFavoritosRepositorySolus extends JpaRepository<PrestadoresFavoritosSolus, Long>{
	
	@Query(value="SELECT * FROM PRESTADORES_FAVORITOS_SOLUS where ativo=1 and chave_guia_medica=?1 and id_usuario=?2",nativeQuery = true)
	PrestadoresFavoritosSolus verificaFavorito(Long chaveGuiaMedico, Long idUsuario);
	
	@Query(value="SELECT chave_guia_medica FROM PRESTADORES_FAVORITOS_SOLUS where ativo=1 and favorito=1 and id_usuario=?1",nativeQuery = true)
	List<Long> getFavoritoByUsuario(Long idUsuario);
}
